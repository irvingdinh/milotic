---
import '../styles/global.css'

import { Dashboard } from "../components/Dashboard.tsx";
import { WidgetCard } from "../widgets/WidgetCard.tsx";
import { CompactRewriteWidget } from "../widgets/rewrite/CompactRewriteWidget.tsx";
import { UuidWidget } from "../widgets/uuid/UuidWidget.tsx";
import { TimezoneWidget } from "../widgets/timezone/TimezoneWidget.tsx";
import { NotepadWidget } from "../widgets/notepad/NotepadWidget.tsx";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Milotic - Developer Tools Dashboard</title>
  </head>
  <body>
    <Dashboard client:load>
      <WidgetCard title="AI Text Rewriter" client:load>
        <CompactRewriteWidget client:only="preact" />
      </WidgetCard>
      
      <WidgetCard title="UUID Generator" client:load>
        <UuidWidget client:only="preact" />
      </WidgetCard>
      
      <WidgetCard title="World Clock" client:load>
        <TimezoneWidget client:only="preact" />
      </WidgetCard>
      
      <WidgetCard title="Notepad" client:load>
        <NotepadWidget client:only="preact" />
      </WidgetCard>
      
    </Dashboard>
  </body>
</html>
